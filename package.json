{
  "name": "react-slide-me",
  "version": "0.0.0",
  "description": "image/item carousel with react js",
  "main": "lib/",
  "scripts": {
    "clean": "rm -rf ./lib",
    "prebuild": "npm run clean && mkdir ./lib",
    "watch": "npm run watch:scripts",
    "build": "npm run build:html && npm run build:dev:scripts && npm run assets",
    "build:dev:scripts": "browserify ./src/example.js -o ./lib/index.js -t babelify --debug",
    "build:lib:scripts": "browserify ./src/slider.jsx -o ./lib/slider.js -t babelify",
    "build:scripts": "browserify ./src/index.js -o ./lib/index.js -t babelify --debug",
    "build:html": "cp ./src/*.html ./lib",
    "assets": "mkdir ./lib/sample-images && cp ./src/sample-images/* ./lib/sample-images/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "live-server ./lib"
  },
  "browserify": {
    "transform": "babelify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexoconner/react-slide-me.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "carousel",
    "gallery",
    "slider",
    "slide"
  ],
  "author": "Alexander Skrabl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexoconner/react-slide-me/issues"
  },
  "homepage": "https://github.com/alexoconner/react-slide-me#readme",
  "devDependencies": {
    "babel-cli": "^6.6.4",
    "babel-preset-urban": "^0.4.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "live-server": "^0.9.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "watchify": "^3.7.0"
  }
}
