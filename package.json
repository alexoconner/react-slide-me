{
  "name": "react-slide-me",
  "version": "0.0.0",
  "description": "image/item carousel with react js",
  "main": "lib/",
  "scripts": {
    "clean": "rm -rf ./lib ./example",
    "prebuild": "npm run clean && mkdir ./lib && mkdir ./example",
    "build": "npm run build:scripts && npm run build:example:scripts && npm run copy:example:html && npm run assets",
    "build:scripts": "babel ./src/ --out-dir ./lib/",
    "build:example:scripts": "browserify ./example-src/example.js -o ./example/example.js -t babelify --debug",
    "watch:scripts": "watchify ./src/index.js -o ./lib/index.js -t babelify --debug",
    "watch:example:scripts": "watchify ./example-src/example.js -o ./example/example.js -t babelify --debug",
    "copy:example:html": "cp ./example-src/index.html ./example/index.html",
    "assets": "mkdir ./example/sample-images && cp ./example-src/sample-images/* ./example/sample-images/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "live-server ./"
  },
  "browserify": {
    "transform": "babelify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexoconner/react-slide-me.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "carousel",
    "gallery",
    "slider",
    "slide"
  ],
  "author": "Alexander Skrabl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexoconner/react-slide-me/issues"
  },
  "homepage": "https://github.com/alexoconner/react-slide-me#readme",
  "devDependencies": {
    "babel-cli": "^6.6.4",
    "babel-preset-urban": "^0.4.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "live-server": "^0.9.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "watchify": "^3.7.0"
  }
}
